{
  "ReRoutes": [
    {
      "Priority": 10,
      "UpstreamPathTemplate": "/api/{everything}",
      "UpstreamHttpMethod": ["Get", "Post", "Delete", "Put"],
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "hypomos-api.hypomos-dev.svc.cluster.local",
          "Port": 80
        }
      ],
      "UpstreamHeaderTransform": {
        "X-Forwarded-Proto": "http",
        "X-Forwarded-Host":  "localhost:5005",
        "X-Forwarded-For": "{RemoteIpAddress}"
      }
    },
    {
      "Priority": 10,
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": ["Get","Post"],
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "hypomos-identityserver.hypomos-dev.svc.cluster.local",
          "Port": 80
        }
      ],
      "UpstreamHeaderTransform": {
        "X-Forwarded-Proto": "http",
        "X-Forwarded-Host":  "192.168.5.17:80",
        "X-Forwarded-For": "{RemoteIpAddress}"
      }
    },
    {
      "Priority": 1, 
      "UpstreamPathTemplate": "/{url}",
      "UpstreamHttpMethod": ["Get", "Post", "Options"],
      "DownstreamPathTemplate": "/{url}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "hypomos-frontend.hypomos-dev.svc.cluster.local",
          "Port": 80
        }
      ],
      "UpstreamHeaderTransform": {
        "X-Forwarded-Proto": "http",
        "X-Forwarded-Host":  "192.168.5.17:80",
        "X-Forwarded-For": "{RemoteIpAddress}"
      }
    },
    {
      "Priority": 5, 
      "DownstreamPathTemplate": "/{catchAll}",
      "UpstreamPathTemplate": "/{catchAll}",
      "UpstreamHttpMethod": ["Get", "Options"],
      "DownstreamScheme": "ws",
      "DownstreamHostAndPorts": [
        {
          "Host": "hypomos-frontend.hypomos-dev.svc.cluster.local",
          "Port": 80
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5005"
  }
}